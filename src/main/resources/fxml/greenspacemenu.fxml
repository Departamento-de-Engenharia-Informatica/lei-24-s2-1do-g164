    <top>
        <VBox alignment="CENTER" prefHeight="11.0" prefWidth="420.0">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold" text="Green Spaces">
                <font>
                    <Font size="15.0" />
                </font></Label>
        </VBox>
    </top>
    <bottom>
        <GridPane prefHeight="195.0" prefWidth="600.0" vgap="5.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
