<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="borderPane" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.esoft.project.ui.gui.controllers20_29.GSMMenuGUIController">
    <top>
        <VBox alignment="CENTER" prefHeight="50.0" prefWidth="400.0" style="-fx-background-color: #2E7D32;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Green Spaces Manager Menu" textFill="WHITE" />
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="350.0" prefWidth="400.0" spacing="30.0" style="-fx-background-color: #F1F8E9;">
            <Button fx:id="greenSpacesButton" mnemonicParsing="false" onAction="#openGreenSpaces" prefWidth="120.0" style="-fx-background-color: #388E3C; -fx-text-fill: white; -fx-font-size: 14px;" text="Green Spaces" />
            <Button fx:id="toDoListButton" mnemonicParsing="false" onAction="#openToDoList" style="-fx-background-color: #388E3C; -fx-text-fill: white; -fx-font-size: 14px;" text="To-Do List" />
            <Button fx:id="agendaButton" mnemonicParsing="false" onAction="#openAgenda" style="-fx-background-color: #388E3C; -fx-text-fill: white; -fx-font-size: 14px;" text="Agenda" />
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#closeWindow" style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-size: 14px;" text="Logout" />
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
        </VBox>
    </center>
</BorderPane>
