<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.esoft.project.ui.gui.controllers.ToDoListGUIController">
    <top>
        <VBox alignment="CENTER">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold" text="To-Do List" />
        </VBox>
    </top>
    <bottom>
        <GridPane prefHeight="104.0" prefWidth="420.0" vgap="5.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button fx:id="btnAddEntry" mnemonicParsing="false" onAction="#openRegisterToDoWindow" prefHeight="34.0" prefWidth="78.0" text="Add Entry" GridPane.halignment="CENTER" />
                <Button fx:id="btnAddAgendaEntry" mnemonicParsing="false" onAction="#openRegisterAgendaWindow" prefHeight="34.0" prefWidth="178.0" text="Add an Entry to the Agenda" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
            </children>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </GridPane>
    </bottom>
   <center>
        <TextArea fx:id="txtToDoListText" editable="false" nodeOrientation="LEFT_TO_RIGHT" prefHeight="238.0" prefWidth="400.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets left="10.0" right="10.0" top="5.0" />
            </BorderPane.margin>
        </TextArea>
   </center>
</BorderPane>
