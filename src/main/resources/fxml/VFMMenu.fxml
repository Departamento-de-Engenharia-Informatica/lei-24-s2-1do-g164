<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="borderPane" prefHeight="600.0" prefWidth="763.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.esoft.project.ui.gui.controllers1_8.VFMMenuGUIController">
    <top>
        <VBox alignment="CENTER" prefHeight="50.0" prefWidth="763.0" style="-fx-background-color: #2E7D32;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Vehicles Menu" textFill="WHITE" />
        </VBox>
    </top>
    <right>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnRegisterCheckUp" layoutX="-2.0" layoutY="275.0" mnemonicParsing="false" onAction="#openRegisterCheckUpWIndow" prefHeight="40.0" prefWidth="192.0" style="-fx-background-color: #388E3C; -fx-text-fill: white; -fx-font-size: 14px;" text="Register Check Up" />
                <Button fx:id="btnCancel" layoutX="-1.0" layoutY="486.0" mnemonicParsing="false" onAction="#closeWindow" prefHeight="40.0" prefWidth="191.0" style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-size: 14px;" text="Exit" />
                <Button fx:id="btnRegisterVehicle" layoutX="-1.0" layoutY="83.0" mnemonicParsing="false" onAction="#openRegisterVehicleWIndow" prefHeight="40.0" prefWidth="192.0" style="-fx-background-color: #388E3C; -fx-text-fill: white; -fx-font-size: 14px;" text="Register Vehicle" />
                <Button fx:id="btnUpdateKilometers" layoutX="-2.0" layoutY="169.0" mnemonicParsing="false" onAction="#openUpdateKilometersWindow" prefHeight="40.0" prefWidth="192.0" style="-fx-background-color: #388E3C; -fx-text-fill: white; -fx-font-size: 14px;" text="Update Kilometers" />
                <Button fx:id="btnShowNeedingCheckup" layoutX="-1.0" layoutY="381.0" mnemonicParsing="false" onAction="#toggleShowNeedingCheckup" prefHeight="40.0" prefWidth="191.0" style="-fx-background-color: #388E3C; -fx-text-fill: white; -fx-font-size: 14px;" text="Show Needing Checkup" />
            </children>
        </AnchorPane>
    </right>
    <center>
        <ListView fx:id="list" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </ListView>
    </center>
</BorderPane>
