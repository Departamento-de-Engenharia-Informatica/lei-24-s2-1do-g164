                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Name" GridPane.halignment="RIGHT" GridPane.rowIndex="0" />
                <TextField fx:id="txtName" GridPane.columnIndex="1" />
                <Label text="Address" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                <TextField fx:id="txtAddress" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Area (hectares)" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                <TextField fx:id="txtArea" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Green Space Type" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
                <ComboBox fx:id="cmbGreenSpaceTypes" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </children>
            <padding>
                <Insets bottom="10.0" top="10.0" left="10.0" right="10.0" />
