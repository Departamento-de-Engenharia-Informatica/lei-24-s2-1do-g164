<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="borderPane" prefHeight="600.0" prefWidth="663.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.esoft.project.ui.gui.controllers.AgendaMenuGUIController">
    <top>
        <VBox alignment="CENTER" prefHeight="50.0" prefWidth="750.0" style="-fx-background-color: #2E7D32;">

            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Agenda" textFill="WHITE" />
        </VBox>
    </top>
    <bottom>
        <GridPane prefHeight="150.0" prefWidth="750.0" vgap="10.0" hgap="10.0" alignment="CENTER" style="-fx-background-color: #F1F8E9;" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" minWidth="100.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="100.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS" minHeight="50.0" />
                <RowConstraints vgrow="ALWAYS" minHeight="50.0" />
            </rowConstraints>
            <children>
                <Button fx:id="btnAddAgendaEntry" mnemonicParsing="false" onAction="#openCancelAgendaEntryWindow" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #388E3C; -fx-text-fill: white; -fx-font-size: 14px;" text="Add an Entry to the Agenda" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Button fx:id="btnAddTeam" mnemonicParsing="false" onAction="#openCancelAgendaEntryWindow" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #388E3C; -fx-text-fill: white; -fx-font-size: 14px;" text="Add a Team to an Entry" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Button fx:id="btnAddVehicles" mnemonicParsing="false" onAction="#openCancelAgendaEntryWindow" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #388E3C; -fx-text-fill: white; -fx-font-size: 14px;" text="Add vehicles to Entry" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <Button fx:id="btnPostpone" mnemonicParsing="false" onAction="#openCancelAgendaEntryWindow" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #388E3C; -fx-text-fill: white; -fx-font-size: 14px;" text="Postpone an Entry" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Button fx:id="btnCancelEntry" mnemonicParsing="false" onAction="#openCancelAgendaEntryWindow" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #388E3C; -fx-text-fill: white; -fx-font-size: 14px;" text="Cancel an Entry" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#closeWindow" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-size: 14px;" text="Exit" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </GridPane>
    </bottom>
    <center>
        <TextArea fx:id="txtText" editable="false" nodeOrientation="LEFT_TO_RIGHT" prefHeight="450.0" prefWidth="743.0" style="-fx-control-inner-background: #C8E6C9; -fx-font-family: 'Fira Code'; -fx-font-size: 14px; -fx-text-fill: #2E7D32; -fx-border-color: #81C784; -fx-border-width: 2;" wrapText="true" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </BorderPane.margin>
        </TextArea>
    </center>
</BorderPane>

