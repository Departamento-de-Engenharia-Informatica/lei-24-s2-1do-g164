            </rowConstraints>
            <children>
                <Button fx:id="btnAddEntry" mnemonicParsing="false" onAction="#openRegisterToDoWindow" prefHeight="34.0" prefWidth="178.0" text="Add Green Space" GridPane.halignment="CENTER" />
