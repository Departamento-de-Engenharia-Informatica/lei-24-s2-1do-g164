         <Button fx:id="btnTeams" layoutX="155.0" layoutY="200.0" mnemonicParsing="false" onAction="#openTeamsMenuWindow" prefHeight="30.0" prefWidth="110.0" style="-fx-background-color: #388E3C; -fx-text-fill: white; -fx-font-size: 14px;" text="Teams" />
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#closeWindow" style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-size: 14px;" text="Logout" />
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
        </VBox>
    </center>
</BorderPane>
