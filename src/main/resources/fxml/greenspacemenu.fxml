            </children>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </GridPane>
    </bottom>
    <center>
        <TextArea fx:id="txtToDoListText" editable="false" nodeOrientation="LEFT_TO_RIGHT" prefHeight="370.0" prefWidth="672.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets left="10.0" right="10.0" top="5.0" />
            </BorderPane.margin>
            <font>
                <Font name="Fira Code Regular" size="15.0" />
            </font>
        </TextArea>
    </center>
</BorderPane>
