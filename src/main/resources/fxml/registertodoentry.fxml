<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="175.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.esoft.project.ui.gui.controllers.RegisterToDoEntryGUIController">
    <bottom>
        <FlowPane alignment="CENTER" hgap="20.0" prefWidth="400.0" BorderPane.alignment="CENTER" style="-fx-background-color: #ffffff;">
            <children>
                <Button fx:id="btnAddEntry" defaultButton="true" mnemonicParsing="false" onAction="#registerToDoEntry" text="Add Entry" style="-fx-background-color: #388E3C; -fx-text-fill: white; -fx-font-size: 14px;" />
                <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#closeWindow" text="Cancel" style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-size: 14px;" />
            </children>
            <padding>
                <Insets bottom="5.0" top="15.0" />
            </padding>
        </FlowPane>
    </bottom>
    <center>
        <GridPane hgap="10.0" vgap="10.0" BorderPane.alignment="CENTER" style="-fx-background-color: #ffffff;">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="30.0" vgrow="ALWAYS" />
                <RowConstraints minHeight="30.0" vgrow="ALWAYS" />
                <RowConstraints minHeight="30.0" vgrow="ALWAYS" />
                <RowConstraints minHeight="30.0" vgrow="ALWAYS" />
            </rowConstraints>
            <children>
                <Label text="Description" GridPane.halignment="RIGHT" />
                <TextField fx:id="txtDescription" GridPane.columnIndex="1" />
                <Label text="Green Space" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                <ComboBox fx:id="cmbGreenSpaces" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Expected Duration (hours)" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                <TextField fx:id="txtExpectedDuration" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Urgency Degree" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
                <ComboBox fx:id="cmbUrgencyDegree" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </children>
            <padding>
                <Insets bottom="10.0" top="10.0" left="10.0" right="10.0" />
            </padding>
        </GridPane>
    </center>
    <padding>
        <Insets right="10.0" />
    </padding>
</BorderPane>
