<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="430.0" prefWidth="588.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.esoft.project.ui.gui.controllers1_8.AcceptTeamGUIController">

    <top>
        <VBox alignment="CENTER" prefHeight="58.0" prefWidth="408.0" style="-fx-background-color: #2E7D32;">
            <children>
                <Label prefHeight="35.0" prefWidth="360.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="             Team Proposal" textFill="WHITE" />
            </children>
        </VBox>
    </top>

    <center>
        <ListView fx:id="listView" prefHeight="230.0" prefWidth="393.0" GridPane.rowIndex="2" />
    </center>

    <bottom>
        <HBox alignment="CENTER" prefHeight="111.0" prefWidth="550.0" spacing="20.0" style="-fx-background-color: #F1F8E9;">
            <!-- Increased spacing between buttons -->
            <children>
                <Button fx:id="btnAccept" mnemonicParsing="false" onAction="#acceptTeamProposal" prefHeight="37.0" prefWidth="165.0" style="-fx-background-color: #388E3C; -fx-text-fill: white;" text="Accept" />
                <Button fx:id="btnRefuse" mnemonicParsing="false" onAction="#refuseTeamProposal" prefHeight="38.0" prefWidth="155.0" style="-fx-background-color: #D32F2F; -fx-text-fill: white;" text="Refuse" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
